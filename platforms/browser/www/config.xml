<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ewbucl.diyworkshops" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>PPL PWR DIY Workshops</name>
    <description>
        Prototype app built by Engineers Without Borders UCL (github.com/EWB-UCL) for PPL PWR (pplpwr.org.uk) to complement their DIY Sustainability Workshops
    </description>
    <author href="http://github.com/EWB-UCL">
        Engineers Without Borders UCL
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
</widget>
